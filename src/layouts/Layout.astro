---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content="Fortnite Gun Comparison" />
    <meta property="og:url" content="https://fortniteguns.app/" />
    <meta property="og:site_name" content="Fortnite Gun Comparison" />
    <meta
      property="og:description"
      content="Compare any two Fortnite weapons to see which one does more damage, has a faster kill time, reloads quicker, and more!"
    />
    <meta
      property="og:image"
      content="https://assets.reedpopcdn.com/Fortnite-best-weapons-tier-list-for-Chapter-4%2C-Season-1.jpg/BROK/resize/1200x1200%3E/format/jpg/quality/70/Fortnite-best-weapons-tier-list-for-Chapter-4%2C-Season-1.jpg"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #2d2d2d;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .p-dropdown-panel {
    max-width: 100vw;
    min-width: 400px !important;
  }
</style>
